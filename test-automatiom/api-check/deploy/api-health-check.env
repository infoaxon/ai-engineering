# API Health Check - Production Environment Configuration
# Location: /etc/api-health-check.env
# Permissions: 600, owned by apihealth:apihealth

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# Environment identifier
ENVIRONMENT=production

# Admin credentials - CHANGE THESE IN PRODUCTION!
ADMIN_USERNAME=admin
ADMIN_PASSWORD=CHANGE_ME_TO_SECURE_PASSWORD

# =============================================================================
# HEALTH CHECK SETTINGS
# =============================================================================

# Check interval in minutes
CHECK_INTERVAL_MINUTES=5

# Default timeout for API calls (seconds)
DEFAULT_TIMEOUT_SECONDS=30

# Latency threshold for degraded status (milliseconds)
LATENCY_THRESHOLD_MS=2000

# How many days to retain health check history
RETENTION_DAYS=30

# =============================================================================
# LOGGING
# =============================================================================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log file path (in addition to systemd journal)
LOG_FILE=/opt/api-health-check/logs/app.log

# =============================================================================
# SECURITY
# =============================================================================

# Trusted proxy headers (for nginx)
FORWARDED_ALLOW_IPS=127.0.0.1

# CORS origins (comma-separated, leave empty to disable)
CORS_ORIGINS=

# =============================================================================
# PERFORMANCE
# =============================================================================

# Maximum concurrent health checks per customer
MAX_CONCURRENT_CHECKS=10

# Connection pool size for HTTP client
HTTP_POOL_SIZE=20
